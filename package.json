{
  "name": "mcps-proxy",
  "version": "1.1.1",
  "description": "⚠️ DEPRECATED: This project has been deprecated. Please use mcp-all-in-one instead. A minimalist MCP (Model Context Protocol) server proxy tool with HTTP and STDIO interface support",
  "main": "dist/app.js",
  "bin": {
    "mcps-proxy": "dist/cli.js"
  },
  "scripts": {
    "install": "echo \"\\n⚠️  项目已废弃\\n本项目已废弃，不再维护。请迁移到新项目：\\n📦 mcp-all-in-one: https://www.npmjs.com/package/mcp-all-in-one\\n🔗 GitHub仓库: https://github.com/vtxf/mcp-all-in-one\\n\"",
    "build": "tsc",
    "start": "node dist/cli.js",
    "start:http": "node dist/cli.js --http",
    "start:stdio": "node dist/cli.js --stdio",
    "dev": "tsx src/cli.ts",
    "dev:http": "tsx src/cli.ts --http",
    "dev:stdio": "tsx src/cli.ts --stdio --schema=default",
    "watch": "nodemon --exec tsx src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:stdio": "jest --testNamePattern=STDIO",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.17.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "eventsource": "^4.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^22.0.0",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "mcp",
    "proxy",
    "model-context-protocol",
    "api",
    "server",
    "stdio",
    "http",
    "cli",
    "json-rpc",
    "automation",
    "tools"
  ],
  "author": "vtxf <vtxf@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vtxf/mcps-proxy.git"
  },
  "homepage": "https://github.com/vtxf/mcps-proxy#readme"
}
